<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="bean"
            type="com.king.app.plate.page.h2h.H2hItem" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#34495e">
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@{bean.date}"
            android:textSize="12dp"
            android:textColor="@color/white"
            tools:text="S1-17 2020-09-09"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@{bean.level}"
            android:textSize="12dp"
            android:textColor="@color/white"
            tools:text="Normal"/>
        <TextView
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:text="@{bean.round}"
            android:textSize="12dp"
            android:textColor="@color/white"
            tools:text="R32"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{bean.result}"
            android:textSize="12dp"
            android:textColor="@color/white"
            tools:text="[8]M d. [7]N"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{bean.score}"
            android:textSize="12dp"
            android:textColor="@color/white"
            tools:text="6-4 6-7(5) 7-6(4)"/>
    </LinearLayout>

</layout>