<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.king.app.plate.page.player.page.PlayerPageViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_bg">
        <com.king.app.jactionbar.JActionbar
            android:id="@+id/actionbar"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/actionbar_bg"
            android:theme="@style/EtActionSearch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showIconBack="true"
            app:supportSearch="false"
            app:title="Back"
            app:titleColor="@color/white"
            app:titleSize="18dp" />
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbar"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/TvPlayerCircle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@{model.playerName}"
                    android:textSize="50dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@{model.playerRank}"
                    android:textColor="@color/red"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_score"
                    app:layout_constraintStart_toEndOf="@+id/tv_rank_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_name"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.playerScore}"
                    android:textColor="@color/blue375BF1"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_rank"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rank" />

                <TextView
                    android:id="@+id/tv_rank_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="rank"
                    android:textColor="@color/text_sub"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_rank"
                    app:layout_constraintStart_toEndOf="@+id/tv_name" />

                <TextView
                    android:id="@+id/tv_score_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="score"
                    android:textColor="@color/text_sub"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_rank_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_score" />

                <LinearLayout
                    android:id="@+id/ll_score"
                    style="@style/GroupKeyValue"
                    android:paddingRight="10dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name">
                    <TextView
                        style="@style/TvGroupKey"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Score structure"/>
                    <ImageView
                        android:id="@+id/iv_score_expand"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_chevron_right_black_36dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_high"
                    style="@style/GroupKeyValue"
                    android:layout_marginTop="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_score">
                    <TextView
                        style="@style/TvGroupKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Highest rank"/>
                    <TextView
                        android:id="@+id/tv_high"
                        style="@style/TvGroupValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@{model.highestRank}"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_low"
                    style="@style/GroupKeyValue"
                    android:layout_marginTop="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_high">
                    <TextView
                        style="@style/TvGroupKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lowest rank"/>
                    <TextView
                        android:id="@+id/tv_low"
                        style="@style/TvGroupValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@{model.lowestRank}"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_top8"
                    style="@style/GroupKeyValue"
                    android:layout_marginTop="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_low">
                    <TextView
                        style="@style/TvGroupKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weeks at top 8"/>
                    <TextView
                        android:id="@+id/tv_top8"
                        style="@style/TvGroupValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@{model.top8Weeks}"/>
                </LinearLayout>

                <com.king.app.plate.view.widget.chart.LineChart
                    android:id="@+id/chart_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    app:axisXTextSize="8dp"
                    app:axisYTextSize="8dp"
                    app:axisYTextWidth="30dp"
                    app:axisXExtendLineWidth="10dp"
                    app:minXCellWidth="5dp"
                    app:valueTextSize="8dp"
                    app:lineColor="#3399ff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_top8"/>

                <LinearLayout
                    android:id="@+id/ll_period"
                    style="@style/GroupKeyValue"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chart_rank">
                    <Spinner
                        android:id="@+id/sp_result_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/best_result_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/chart_rank"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/iv_last"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="16dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_chevron_left_black_36dp" />
                    <TextView
                        android:id="@+id/tv_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/iv_next"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="4dp"
                        android:layout_marginEnd="2dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        app:srcCompat="@drawable/ic_chevron_right_black_36dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_records"
                    style="@style/GroupKeyValue"
                    android:layout_marginTop="1dp"
                    android:paddingRight="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_period">
                    <TextView
                        style="@style/TvGroupKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Records"/>
                    <TextView
                        android:id="@+id/tv_record"
                        style="@style/TvGroupValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@{model.recordText}"/>
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_chevron_right_black_36dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_result"
                    style="@style/GroupKeyValue"
                    android:layout_marginTop="1dp"
                    android:paddingRight="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_records">
                    <TextView
                        style="@style/TvGroupKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best result"/>
                    <TextView
                        android:id="@+id/tv_result"
                        style="@style/TvGroupValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:text="@{model.bestResult}"/>
                    <ImageView
                        android:id="@+id/iv_result_expand"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_results"
                    style="@style/GroupKeyValue"
                    android:paddingRight="10dp"
                    android:background="@color/transparent"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_result">
                    <TextView
                        android:id="@+id/tv_champion"
                        style="@style/TvGroupValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="36dp"
                        android:text="@{model.championTimes}"
                        android:visibility="@{model.championTimesVisibility}"/>
                    <TextView
                        android:id="@+id/tv_ru"
                        style="@style/TvGroupValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="36dp"
                        android:layout_marginTop="8dp"
                        android:text="@{model.ruTimes}"
                        android:visibility="@{model.ruTimesVisibility}"/>
                    <TextView
                        android:id="@+id/tv_sf"
                        style="@style/TvGroupValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="36dp"
                        android:layout_marginTop="8dp"
                        android:text="@{model.sfTimes}"
                        android:visibility="@{model.sfTimesVisibility}"/>
                    <TextView
                        android:id="@+id/tv_qf"
                        style="@style/TvGroupValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="36dp"
                        android:layout_marginTop="8dp"
                        android:text="@{model.qfTimes}"
                        android:visibility="@{model.qfTimesVisibility}"/>
                    <TextView
                        android:id="@+id/tv_r16"
                        style="@style/TvGroupValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="36dp"
                        android:layout_marginTop="8dp"
                        android:text="@{model.r16Times}"
                        android:visibility="@{model.r16TimesVisibility}"/>
                    <TextView
                        android:id="@+id/tv_r32"
                        style="@style/TvGroupValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="36dp"
                        android:layout_marginTop="8dp"
                        android:text="@{model.r32Times}"
                        android:visibility="@{model.r32TimesVisibility}"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_h2h"
                    style="@style/GroupKeyValue"
                    android:layout_marginTop="1dp"
                    android:paddingRight="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_results">
                    <TextView
                        style="@style/TvGroupKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Head 2 Head"/>
                    <TextView
                        android:id="@+id/tv_h2h"
                        style="@style/TvGroupValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@{model.h2hPlayers}"/>
                    <ImageView
                        android:id="@+id/iv_h2h_go"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_chevron_right_black_36dp"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>